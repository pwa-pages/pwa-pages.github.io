{
  "compilerOptions": {
    "outDir": "./src/lib/js",
    "types": [],
    "verbatimModuleSyntax": false,
    "esModuleInterop": false,
    "noEmitHelpers": false,  
    "importHelpers": false,  
    "rootDir": "./src/lib/",
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
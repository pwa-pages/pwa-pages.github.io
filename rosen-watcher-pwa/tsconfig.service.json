{
  "compilerOptions": {
    "outDir": "./src/shared/js",
    "types": [],
    "verbatimModuleSyntax": false,
    "esModuleInterop": false,
    "noEmitHelpers": true,
    "rootDir": "./src/shared/ts/",
    "target": "ESNext",
    "module": "ESNext", 
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "dom",
      "webworker"
    ]
  },
  "include": [
    "src/shared/ts/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
